<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="UserPersistenceUnit" transaction-type="JTA">
        <jta-data-source>jdbc/tfg</jta-data-source>
        <class>cat.institutmarianao.domain.Doctor</class>
        <class>cat.institutmarianao.domain.Nurse</class>
        <class>cat.institutmarianao.domain.Patient</class>
        <class>cat.institutmarianao.domain.Auxiliar</class>
        <class>cat.institutmarianao.domain.Visit</class>
        <class>cat.institutmarianao.domain.Prescription</class>
        <properties>
            <property name="eclipselink.logging.level" value="FINEST"/>
        </properties>
    </persistence-unit>
</persistence>
